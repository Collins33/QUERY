{{#if queryUpdate}}
<h2>UPDATE YOUR QUESTION</h2>
<div>
    <form>
      <div class="form-group">
        <label for="author">Name of author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="type">Topic</label>
        {{input value=topic id="topic"  placeholder=question.topic}}
      </div>
      <div class="form-group">
        <label for="query">question</label>
        {{input value=query id="query"  placeholder=question.query}}
      </div>
      <div class="form-group">
        <label for="image">Image of question</label>
        {{input value=image id="image"  placeholder=question.author}}
      </div>
      <button {{action 'changeQuery' question}}>Submit question</button>
    </form>
  </div>
{{else}}
<button {{action 'updateQuery'}}>update your question</button>
{{/if}}
