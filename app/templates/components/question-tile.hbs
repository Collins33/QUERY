<div class="row mainanswer well well lg">
  <div class="col-md-6">
    {{#link-to 'infor-mation' question.id}}
      <h1 class="text">QUESTION:{{question.query}}</h1>
      <h2 class="text">NAME OF AUTHOR:{{question.author}}</h2>
      <h2 class="text">TOPIC:{{question.topic}}</h2>

      {{/link-to}} {{query-update question=question changeQuery="changeQuery" }}
      <button {{action 'delete' question}} class="btn btn-danger">QUERY ANSWERED</button>
  </div>
  <div class="col-md-6">
    <h2 class="text">ADD IMAGE FOR BETTER CLARITY</h2>
    <img src= {{question.image}} class="well well lg img-responsive">
  </div>
</div>
